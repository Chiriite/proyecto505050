---
import Layout from '../../layouts/Layout.astro';
import Back from '../../components/Back.astro';
import SimplifiedStatsCharts from '../../components/SimplifiedStatsCharts';
import RecordsGrid from '../../components/RecordsGrid';
import Footer from '../../components/Footer.astro';
---

<Layout title="Estadísticas - Proyecto 50/50/50">
  <main class="bg-black p-5 w-full flex flex-col items-center gap-10">
    <header class="w-full flex justify-between items-start">
      <aside class="flex flex-col gap-2 max-w-[70%]">
        <h1 class="text-4xl md:text-6xl font-bold text-white">Estadísticas</h1>
        <h2 class="text-lg md:text-2xl text-white/50">Análisis del Proyecto 50-50-50</h2>
      </aside>
      <Back />
    </header>

    <!-- Charts Section -->
    <SimplifiedStatsCharts client:load />
    
    <!-- Records Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full">
      <!-- Mayor Elevación -->
      <div class="group relative overflow-hidden border border-white/10 p-6 md:p-8 rounded-2xl bg-gradient-to-br from-white/5 to-white/[0.02] hover:from-white/10 hover:to-white/[0.05] transition-all duration-500 hover:scale-[1.02] cursor-pointer hover:shadow-[0_0_30px_rgba(245,158,11,0.1)]">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-[#F59E0B]/5 to-transparent rounded-full blur-2xl"></div>
        
        <div class="relative z-10 flex flex-col items-center justify-center p-2">
          <div class="flex flex-row gap-4 items-center mb-6 border-b border-white/10 pb-4 w-full justify-center">
            <svg class="w-8 h-8 text-[#F59E0B]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21l6-8 4 4 8-12"></path>
            </svg>
            <h4 class="text-xl md:text-2xl font-bold text-white">Mayor Elevación</h4>
          </div>
          
          <div class="text-center">
            <div class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-[#F59E0B] to-orange-400 mb-2 px-1 leading-tight" id="max-elevation-city">
              <!-- Data will be populated by RecordsGrid -->
            </div>
            <div class="text-white/60 text-base md:text-lg font-medium" id="max-elevation-value">
              <!-- Data will be populated by RecordsGrid -->
            </div>
          </div>
        </div>
      </div>

      <!-- Mejor Ritmo -->
      <div class="group relative overflow-hidden border border-white/10 p-6 md:p-8 rounded-2xl bg-gradient-to-br from-white/5 to-white/[0.02] hover:from-white/10 hover:to-white/[0.05] transition-all duration-500 hover:scale-[1.02] cursor-pointer hover:shadow-[0_0_30px_rgba(245,158,11,0.1)]">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-[#F59E0B]/5 to-transparent rounded-full blur-2xl"></div>
        
        <div class="relative z-10 flex flex-col items-center justify-center p-2">
          <div class="flex flex-row gap-4 items-center mb-6 border-b border-white/10 pb-4 w-full justify-center">
            <svg class="w-8 h-8 text-[#F59E0B]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <h4 class="text-xl md:text-2xl font-bold text-white">Mejor Ritmo</h4>
          </div>
          
          <div class="text-center flex flex-col items-center justify-center"> 
            <div class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-[#F59E0B] to-orange-400 mb-2 px-1 leading-tight" id="best-pace-city">
              
            </div>
            <div class="text-white/60 text-base md:text-lg font-medium" id="best-pace-value">
              
            </div>
          </div>
        </div>
      </div>
    </div>

    <div style="display: none;">
      <RecordsGrid client:load />
    </div>
  </main>
  <Footer />
</Layout>
