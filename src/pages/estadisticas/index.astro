---
import Layout from '../../layouts/Layout.astro';
import Back from '../../components/Back.astro';
import SimplifiedStatsCharts from '../../components/SimplifiedStatsCharts';
import RecordsGrid from '../../components/RecordsGrid';
import Footer from '../../components/Footer.astro';
---

<Layout title="Estadísticas - Proyecto 50/50/50">
  <main class="bg-black p-8 w-full flex flex-col items-center gap-10">
    <header class="w-full flex justify-between items-start">
      <aside class="flex flex-col gap-2 max-w-[70%]">
        <h1 class="text-4xl md:text-6xl font-bold text-white">Estadísticas</h1>
        <h2 class="text-lg md:text-2xl text-white/50">Análisis del Proyecto 50-50-50</h2>
      </aside>
      <Back />
    </header>

    <!-- Charts Section -->
    <SimplifiedStatsCharts client:load />
    
    <!-- Records Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full">
      <!-- Mayor Elevación -->
      <div class="group flex flex-col justify-center border border-white/10 p-4 md:p-8 rounded-lg bg-white/5 hover:bg-[#F59E0B]/10 transition-all duration-500 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center mb-4">
          <svg class="w-6 h-6 text-[#F59E0B] mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z"></path>
          </svg>
          <h4 class="text-xl md:text-2xl font-bold text-white">Mayor Elevación</h4>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-5xl font-bold text-[#F59E0B] mb-1" id="max-elevation-city">
            <!-- Data will be populated by RecordsGrid -->
          </div>
          <div class="text-white/40 text-sm md:text-md" id="max-elevation-value">
            <!-- Data will be populated by RecordsGrid -->
          </div>
        </div>
      </div>

      <!-- Mejor Ritmo -->
      <div class="group flex flex-col justify-center border border-white/10 p-4 md:p-8 rounded-lg bg-white/5 hover:bg-[#F59E0B]/10 transition-all duration-500 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center mb-4">
          <svg class="w-6 h-6 text-[#F59E0B] mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <h4 class="text-xl md:text-2xl font-bold text-white">Mejor Ritmo</h4>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-5xl font-bold text-[#F59E0B] mb-1" id="best-pace-city">
            <!-- Data will be populated by RecordsGrid -->
          </div>
          <div class="text-white/40 text-sm md:text-md" id="best-pace-value">
            <!-- Data will be populated by RecordsGrid -->
          </div>
        </div>
      </div>
    </div>

    <div style="display: none;">
      <RecordsGrid client:load />
    </div>
  </main>
  <Footer />
</Layout>
