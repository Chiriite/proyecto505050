---
import Layout from '../layouts/Layout.astro';
import SpainMap from '../components/SpainMap.tsx';
---

<Layout title="Spain Running Journey - Interactive Map">
  <main class="relative w-full h-screen overflow-hidden">
    <!--
      <header class="absolute inset-x-0 top-0 z-[1000] pointer-events-none">
        <div class="max-w-lg m-8 p-8 bg-black/85 backdrop-blur-xl border border-primary rounded-2xl pointer-events-auto shadow-glow">
          <h1 class="mb-4 leading-tight">
            <span class="block text-hero-primary text-primary drop-shadow-md">My Running Journey</span>
            <span class="block text-hero-secondary text-text-primary mt-1">Through Spain</span>
          </h1>
          
          <p class="text-lg leading-relaxed mb-6 text-text-secondary">
            Discover the <strong class="text-primary font-semibold">50 cities</strong> where I've run, 
            mapped chronologically across the beautiful landscape of Spain
          </p>
          
          <div class="flex items-center justify-between my-6 py-4 border-t border-b border-border">
            <div class="text-center flex-1">
              <span class="block text-stat-number text-primary">50</span>
              <span class="block text-stat-label text-text-muted uppercase tracking-wider mt-1">Cities</span>
            </div>
            <div class="w-px h-12 bg-border mx-4"></div>
            <div class="text-center flex-1">
              <span class="block text-stat-number text-primary">500+</span>
              <span class="block text-stat-label text-text-muted uppercase tracking-wider mt-1">Kilometers</span>
            </div>
            <div class="w-px h-12 bg-border mx-4"></div>
            <div class="text-center flex-1">
              <span class="block text-stat-number text-primary">2023</span>
              <span class="block text-stat-label text-text-muted uppercase tracking-wider mt-1">Journey</span>
            </div>
          </div>
          
          <p class="text-sm text-text-muted italic">
            Click on any numbered point to explore that city's running story
          </p>
        </div>
      </header>
    -->

    <!-- Interactive Map -->
    <section class="absolute inset-0 z-[1] w-full h-full">
      <SpainMap client:load />
    </section>

    <!-- Loading State -->
    <div class="fixed inset-0 bg-background flex items-center justify-center z-[2000] transition-opacity duration-500 opacity-100 pointer-events-auto" id="loading">
      <div class="text-center">
        <div class="w-12 h-12 border-3 border-border border-t-primary rounded-full animate-spin mx-auto mb-4"></div>
        <p class="text-text-primary">Loading your running journey...</p>
      </div>
    </div>
  </main>

  <!-- Responsive adjustments for mobile -->
  <style>
    @media (max-width: 768px) {
      .max-w-lg {
        max-width: none;
        margin: 1rem;
        padding: 1.5rem;
      }
    }

    @media (max-width: 480px) {
      .flex {
        flex-direction: column;
        gap: 1rem;
      }
      .w-px {
        width: 100%;
        height: 1px;
        margin: 0;
      }
      .h-12 {
        height: 1px;
      }
    }

    /* Small height adjustments */
    @media (max-height: 600px) and (max-width: 768px) {
      header {
        opacity: 0.95;
      }
      .max-w-lg {
        margin: 0.5rem;
        padding: 1rem;
      }
    }
  </style>
</Layout>

<script>
  // Handle loading state - fade out after content loads
  function hideLoadingScreen() {
    const loading = document.getElementById('loading');
    if (loading) {
      loading.style.opacity = '0';
      loading.style.pointerEvents = 'none';
      setTimeout(() => {
        loading.style.display = 'none';
      }, 500);
    }
  }

  // Try multiple approaches to ensure loading screen is hidden
  document.addEventListener('DOMContentLoaded', () => {
    // Hide after a reasonable delay
    setTimeout(hideLoadingScreen, 1000);
  });

  window.addEventListener('load', () => {
    // Also hide on window load
    setTimeout(hideLoadingScreen, 500);
  });

  // Fallback - force hide after 3 seconds
  setTimeout(hideLoadingScreen, 3000);
</script>
