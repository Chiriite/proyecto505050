---
import Layout from '../layouts/Layout.astro';
import SpainMap from '../components/SpainMap.tsx';
import Button from '../components/Button.astro';
---

<Layout title="Proyecto 505050">
  <main class="relative w-full h-screen overflow-hidden">

    <!-- Navigation Buttons -->
    <div class="absolute bottom-8 right-8 z-[1000] flex flex-col gap-3">
      <Button href="/c/1" text="Start Journey" variant="orange" />
      <Button href="/estadisticas" text="Stats" variant="gray" />
      <Button href="/info" text="Info" variant="blue" />
      <Button href="https://www.migranodearena.org/reto/proyecto-50-50-50-50-d-as-50-kil-metros-50-provincias-espa-olas" isBlank text="Dona" variant="blue" />
    </div>

    <!-- Interactive Map -->
    <section class="absolute inset-0 z-[1] w-full h-full">
      <SpainMap client:load />
    </section>

    <!-- Loading State -->
    <div class="fixed inset-0 bg-background flex items-center justify-center z-[2000] transition-opacity duration-500 opacity-100 pointer-events-auto" id="loading">
      <div class="text-center">
        <div class="w-12 h-12 border-3 border-border border-primary rounded-full animate-spin mx-auto mb-12"></div>
        <p class="text-text-primary flex flex-col items-center justify-center gap-2">Proyecto 50-50-50</p>
      </div>
    </div>
  </main>

  <!-- Responsive adjustments for mobile -->
  <style>
    @media (max-width: 768px) {
      .max-w-lg {
        max-width: none;
        margin: 1rem;
        padding: 1.5rem;
      }
      
      /* Mobile button adjustments */
      .absolute.bottom-8.right-8 {
        bottom: 1rem;
        right: 1rem;
      }
      
      .absolute.bottom-8.right-8 .flex.flex-col {
        gap: 0.75rem;
      }
      
      .absolute.bottom-8.right-8 .rounded-2xl {
        padding: 0.75rem 1.25rem;
      }
      
      .absolute.bottom-8.right-8 .text-lg {
        font-size: 1rem;
      }
    }

    @media (max-width: 480px) {
      .flex {
        flex-direction: column;
        gap: 1rem;
      }
      .w-px {
        width: 100%;
        height: 1px;
        margin: 0;
      }
      .h-12 {
        height: 1px;
      }
      
      /* Extra small screen button adjustments */
      .absolute.bottom-8.right-8 {
        bottom: 0.75rem;
        right: 0.75rem;
      }
      
      .absolute.bottom-8.right-8 .rounded-2xl {
        padding: 0.5rem 1rem;
        border-radius: 1rem;
      }
      
      .absolute.bottom-8.right-8 .text-lg {
        font-size: 0.875rem;
      }
    }

    /* Small height adjustments */
    @media (max-height: 600px) and (max-width: 768px) {
      header {
        opacity: 0.95;
      }
      .max-w-lg {
        margin: 0.5rem;
        padding: 1rem;
      }
      
      /* Compact button layout for small screens */
      .absolute.bottom-8.right-8 {
        bottom: 0.5rem;
        right: 0.5rem;
      }
      
      .absolute.bottom-8.right-8 .flex.flex-col {
        gap: 0.5rem;
      }
    }
  </style>
</Layout>

<script>
  // Handle loading state - fade out after content loads
  function hideLoadingScreen() {
    const loading = document.getElementById('loading');
    if (loading) {
      loading.style.opacity = '0';
      loading.style.pointerEvents = 'none';
      setTimeout(() => {
        loading.style.display = 'none';
      }, 500);
    }
  }

  // Try multiple approaches to ensure loading screen is hidden
  document.addEventListener('DOMContentLoaded', () => {
    // Hide after a reasonable delay
    setTimeout(hideLoadingScreen, 1000);
  });

  window.addEventListener('load', () => {
    // Also hide on window load
    setTimeout(hideLoadingScreen, 500);
  });

  // Fallback - force hide after 3 seconds
  setTimeout(hideLoadingScreen, 3000);
</script>
