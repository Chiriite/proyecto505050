---
import Layout from '../layouts/Layout.astro';
import SpainMap from '../components/SpainMap.tsx';
import Button from '../components/Button.astro';
---

<Layout title="Proyecto 50-50-50">
  <main class="relative w-full h-screen-safe overflow-hidden">

    <!-- Top Left - Logo -->
    <!-- <div class="absolute top-6 left-6 z-[1000]">
      <Button 
        href="/" 
        variant="gray" 
        size="small" 
        text="Proyecto 50-50-50"
      />
    </div>

    <!-- Top Navigation Buttons -->
    <div class="absolute top-6 right-6 z-[1000] flex flex-col gap-4">
      <Button 
        href="/info"  
        variant="gray" 
        size="small"
        icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
      />
      <Button 
        href="/estadisticas" 
        variant="gray" 
        size="small"
        icon="M3 3v18h18V3H3zm16 16H5V5h14v14zM7 10h2v7H7v-7zm4-3h2v10h-2V7zm4 6h2v4h-2v-4z"
      />
    </div>

    <!-- Bottom Left - Donate Button -->
    <div class="absolute bottom-6 left-6 z-[1000]">
      <Button 
        href="https://www.migranodearena.org/reto/proyecto-50-50-50-50-d-as-50-kil-metros-50-provincias-espa-olas" 
        isBlank 
        text="Donar"
        isSpecial
        variant="gray" 
        size="small"
        icon="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
      />
    </div>

    <!-- Bottom Right - Start Journey Button -->
    <div class="absolute bottom-6 right-6 z-[1000]">
      <Button 
        href="/c/1"  
        variant="orange" 
        size="medium"
        icon="M8 5v14l11-7z"
      />
    </div>

    <!-- Interactive Map -->
    <section class="absolute inset-0 z-[1] w-full h-full">
      <SpainMap client:load />
    </section>

    <!-- Loading State -->
    <div id="loading" class="absolute inset-0 bg-background/90 backdrop-blur-sm flex items-center justify-center z-[2000]">
      <div class="text-center">
        <div class="w-12 h-12 border-3 border-border border-t-primary rounded-full animate-spin mx-auto mb-4"></div>
        <p class="text-text-primary">Proyecto 50-50-50</p>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Handle loading state - fade out after content loads
  function hideLoadingScreen() {
    const loading = document.getElementById('loading');
    if (loading) {
      loading.style.opacity = '0';
      loading.style.pointerEvents = 'none';
      setTimeout(() => {
        loading.style.display = 'none';
      }, 500);
    }
  }

  // Try multiple approaches to ensure loading screen is hidden
  document.addEventListener('DOMContentLoaded', () => {
    // Hide after a reasonable delay
    setTimeout(hideLoadingScreen, 1000);
  });

  window.addEventListener('load', () => {
    // Also hide on window load
    setTimeout(hideLoadingScreen, 500);
  });

  // Fallback - force hide after 3 seconds
  setTimeout(hideLoadingScreen, 3000);
</script>
