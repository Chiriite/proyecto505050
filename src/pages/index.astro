---
import Layout from '../layouts/Layout.astro';
import SpainMap from '../components/SpainMap.tsx';
import Button from '../components/Button.astro';
---

<Layout title="Proyecto 505050">
  <main class="relative w-full h-screen overflow-hidden">

    <!-- Navigation Buttons -->
    <div class="absolute bottom-8 right-8 z-[1000] flex flex-col gap-3">
      <Button href="/c/1" text="Start Journey" variant="orange" />
      <Button href="/estadisticas" text="Stats" variant="gray" />
      <Button href="/info" text="Info" variant="blue" />
      <Button href="https://www.migranodearena.org/reto/proyecto-50-50-50-50-d-as-50-kil-metros-50-provincias-espa-olas" isBlank text="Dona" variant="blue" />
    </div>

    <!-- Interactive Map -->
    <section class="absolute inset-0 z-[1] w-full h-full">
      <SpainMap client:load />
    </section>

    <!-- Loading State -->
    <div id="loading" class="absolute inset-0 bg-background/90 backdrop-blur-sm flex items-center justify-center z-[2000]">
      <div class="text-center">
        <div class="w-12 h-12 border-3 border-border border-t-primary rounded-full animate-spin mx-auto mb-4"></div>
        <p class="text-text-primary">Proyecto 50-50-50</p>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Handle loading state - fade out after content loads
  function hideLoadingScreen() {
    const loading = document.getElementById('loading');
    if (loading) {
      loading.style.opacity = '0';
      loading.style.pointerEvents = 'none';
      setTimeout(() => {
        loading.style.display = 'none';
      }, 500);
    }
  }

  // Try multiple approaches to ensure loading screen is hidden
  document.addEventListener('DOMContentLoaded', () => {
    // Hide after a reasonable delay
    setTimeout(hideLoadingScreen, 1000);
  });

  window.addEventListener('load', () => {
    // Also hide on window load
    setTimeout(hideLoadingScreen, 500);
  });

  // Fallback - force hide after 3 seconds
  setTimeout(hideLoadingScreen, 3000);
</script>
